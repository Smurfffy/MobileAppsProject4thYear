<UserControl
    x:Class="UWPhabitHero.Common.AddHabitControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPhabitHero.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical">
            <TextBlock Text="Habit Name"/>
            <TextBox x:Name="HabitNameTextBox"/>
        </StackPanel>

        <StackPanel Grid.Row ="1"  Orientation="Vertical">
            <TextBlock Text="Why You Want To Quit"/>
            <TextBox x:Name="QuitingTextBox" Height="150"/>
        </StackPanel>

        <Button Grid.Row="2" Content="Add" HorizontalAlignment="Left"/>
        <Button Grid.Row="2" Content="Exit" HorizontalAlignment="Right"/>
    </Grid>
</UserControl>
